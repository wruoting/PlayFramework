# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message
GET     /shengJiGame                controllers.HomeController.projects

#Scala dependency injection database
GET    /databaseQuery              controllers.ScalaControllerInject.index

#Post and Put requests
GET    /javascriptRoutes           controllers.HomeController.javascriptRoutes
GET    /shengJiGame/:id            controllers.HomeController.getItem(id: Boolean)
POST   /shengJiGame/new            controllers.HomeController.newItem
PUT    /shengJiGame/:id            controllers.HomeController.updateItem(id: Boolean)
PUT    /shengJiGame/:numberOfDecks controllers.HomeController.startGame(numberOfDecks: Int)

#put use put to overwrite an existing resource

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
